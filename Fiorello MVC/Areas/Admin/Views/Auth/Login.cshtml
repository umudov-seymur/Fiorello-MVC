@model LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["title"] = "Login";
}

<p class="login-box-msg">Sign in to start your session</p>

<form asp-action="Login" method="post">
     <div class="input-group mb-3">
       <input asp-for="Username" class="form-control" placeholder="Enter the username ...">
       <div class="input-group-append">
         <div class="input-group-text">
           <span class="fas fa-envelope"></span>
         </div>
       </div>
       <span class="invalid-feedback font-weight-bold d-block" asp-validation-for="Username"></span>
     </div>
     
    <div class="input-group mb-3">
        <input asp-for="Password" class="form-control" placeholder="Enter the password ...">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
        <span class="invalid-feedback font-weight-bold d-block" asp-validation-for="Password"></span>
    </div>
    
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <input type="checkbox" asp-for="RememberMe">
                <label asp-for="RememberMe"></label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-danger btn-block">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
</form>

<p class="mb-1">
    <a href="/">I forgot my password</a>
</p>
<p class="mb-0">
    <a asp-action="Register" class="text-center">Register a new membership</a>
</p>