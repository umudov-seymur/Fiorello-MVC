@model IEnumerable<ProductCategory>

@{
    ViewData["title"] = "Categories";
}

@section Styles { 
  <link rel="stylesheet" href="~/panel/vendors/datatables-bs4/css/dataTables.bootstrap4.min.css">
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="categories" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="font-weight-bold">Id</th>
                            <th>Category name</th>
                            <th>Created At</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td class="font-weight-bold">#@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.CreatedAt</td>
                                <td class=" text-lg-center text-left min-tablet">
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-xs btn-primary mr-1 text-uppercase">
                                        <i class="fa fa-lg fa-fw fa-pen"></i> 
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-xs btn-danger mr-1 text-uppercase">
                                        <i class="fa fa-lg fa-fw fa-trash"></i> 
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
    <!-- DataTables  & Plugins -->
    <script src="~/panel/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/panel/vendors/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/panel/vendors/datatables-responsive/js/dataTables.responsive.min.js"></script>

    <script>
        $(function () {
            $('#categories').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}